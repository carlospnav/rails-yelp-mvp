<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.submit "add a restaurant", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Cancel", restaurants_path %>
    </div>
  </div>
</div>

